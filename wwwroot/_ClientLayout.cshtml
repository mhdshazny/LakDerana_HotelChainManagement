@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>E-Burger (Yummy Burgers) </title>

    <link href="~/Eshopper/css/bootstrap.min.css" rel="stylesheet">
    @*<link href="~/Eshopper/css/font-awesome.min.css" rel="stylesheet">*@
    <link href="~/Eshopper/css/prettyPhoto.css" rel="stylesheet">
    <link href="~/Eshopper/css/price-range.css" rel="stylesheet">
    <link href="~/Eshopper/css/animate.css" rel="stylesheet">
    <link href="~/Eshopper/css/main.css" rel="stylesheet">
    <link href="~/Eshopper/css/main.css" rel="stylesheet">
    <link href="~/Eshopper/css/responsive.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Eshopper/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Eshopper/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/Eshopper/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Eshopper/images/ico/apple-touch-icon-57-precomposed.png">


    <link href="~/vendor/fontawesome-free/css/all.css" rel="stylesheet" type="text/css">

    <link href="~/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet">


    <script src="~/Eshopper/js/jquery.js"></script>
    <script src="~/Eshopper/js/bootstrap.min.js"></script>
    <script src="~/Eshopper/js/jquery.scrollUp.min.js"></script>
    <script src="~/Eshopper/js/price-range.js"></script>
    <script src="~/Eshopper/js/jquery.prettyPhoto.js"></script>
    <script src="~/Eshopper/js/main.js"></script>
    @RenderSection("Styles", required: false)



</head><!--/head-->

<body>
    <header id="header">
        <!--header-->
        <!--header_top-->
        <div class="container">
            <div class="header_top">
                <div class="row">
                    <div class="col-6">
                        <div class="contactinfo">
                            <ul class="nav nav-pills text-black-50" style="        margin-left: 30px">
                                <li><a href="#"><i class="fa fa-phone"></i> +941 32 654 987</a></li>
                                <li><a href="#"><i class="fa fa-envelope"></i> contact@eburger.com</a></li>
                                <li><a asp-action="Login" asp-controller="AdminIdentity"><i class="fa fa-envelope"></i> Admin Area</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-md-4 clearfix">
                        <div class="btn-group clearfix">
                            <div class="companyinfo" style="margin:0%">
                                <h2><span>E-Burger</span> - <i class="fas fa-hamburger"></i></h2>
                            </div>


                        </div>
                    </div>
                    <div class="col-md-8 clearfix">
                        <div class="shop-menu clearfix pull-right">
                            <ul class="nav nav-pills">
                                @if (@HttpContextAccessor.HttpContext.Session.GetString("Login") == "true")
                                {
                                    <li><a asp-action="Cart" asp-controller="ClientPage"><i class="fa fa-star"></i> Orders</a></li>
                                    <li><a asp-action="MyProfile" asp-controller="ClientPage"><i class="fa fa-star"></i> @HttpContextAccessor.HttpContext.Session.GetString("CusEmail").ToString()</a></li>
                                    <li><a asp-action="Identity" asp-controller="ClientPage"><i class="fa fa-user"></i> Logout</a></li>

                                }
                                else
                                {
                                    <li><a asp-action="Identity" asp-controller="ClientPage"><i class="fa fa-user"></i> Login</a></li>

                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/header-middle-->



        <div class="header-bottom">
            <!--header-bottom-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="mainmenu pull-left">
                            <ul class="nav navbar-nav collapse navbar-collapse">
                                <li><a asp-action="Index" asp-controller="ClientPage" class="active">Home</a></li>
                                @if (@HttpContextAccessor.HttpContext.Session.GetString("Login") == "true")
                                {
                                    <li><a href="@Url.Action("MyPendingOrders", "ClientPage")">All Orders</a></li>
                                }
                                    @*@if (Session["UserID"] != null)
            {*@
                                    @*<li class="dropdown">
                <a href="#">Orders<i class="fa fa-angle-down"></i></a>
                <ul role="menu" class="sub-menu">
                    <li><a href="@Url.Action("MyPendingOrders", "ClientPage")">All Orders</a></li>
                </ul>
            </li>*@
                                    @*  }*@
                                    <li><a href="#">About us</a></li>
                                </ul>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" action="/Borrow/Search" method="get">
                            <div class="search_box pull-right">
                                <input type="text" placeholder="Search" name="searchtxt" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div><!--/header-bottom-->
    </header><!--/header-->

    @RenderBody()

<section id="slider">
    <!--slider-->

    <div class="container">
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">
                        <div class="item active">
                            <div class="col-sm-6">
                                <h1><span>E </span>- BURGER</h1>
                                <h2>Special Online Discount</h2>
                                <p>Everyone who orders throught online will get a special discount of Rs.500 (Condistions Apply) </p>
                            </div>
                            <div class="col-sm-6">
                                <img src="https://media.istockphoto.com/photos/delicious-homemade-hamburger-and-french-fries-picture-id1254672762?b=1&k=20&m=1254672762&s=170667a&w=0&h=nKrG40G2jj9O8wzJ8wDD2zmUKNp00mcdVWK_f_zixug=" class="girl img-responsive" alt="" />
                            </div>
                        </div>

                        <div class="item">
                            <div class="col-sm-6">
                                <img src="https://wpe.com.my/wp-content/uploads/2020/09/f0173491c7.jpg" class="girl img-responsive" alt="" />
                            </div>
                            <div class="col-sm-6">
                                <h1><span>No Queue</span>- No Tension</h1>
                                <h2>Your Take-Away will be ready On TIME .. </h2>
                                <p>Place the order earlier and your food will be ready on time for take away.  </p>
                            </div>

                        </div>
                        <div class="item">
                            <div class="col-sm-6">
                                <h1><span>E </span>- BURGER</h1>
                                <h2>We're Finally Open</h2>
                                <p>We're happy announce that this E - BURGER Shop is officially Open.  </p>
                            </div>
                            <div class="col-sm-6">
                                <img src="https://media.istockphoto.com/photos/mexican-rice-and-chorizo-sausage-wrap-picture-id1313361282?b=1&k=20&m=1313361282&s=170667a&w=0&h=voxT5ZO8GU28MQn5XZ2TGXy8uK0jKfXicv0oO4JncqI=" class="girl img-responsive" alt="" />
                            </div>
                        </div>


                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>
    @* Footer *@
    <footer id="footer">
        <!--Footer-->
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-sm-5">
                        <div class="companyinfo">
                            <h2><span>E-Burger</span> - <i class="fas fa-hamburger"></i></h2>
                        </div>
                    </div>

                    <div class="col-sm-10">

                    </div>


                </div>
            </div>
        </div>


        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <p class="pull-left">Copyright © 2021 E-Burger Pvt LTD. All rights reserved.</p>
                    </div>
                    <div class="col-sm-6">
                        <div class="breadcrumbs pull-right">
                            <ol class="breadcrumb" style="margin:0%">
                                <li class="">Employee</li>&nbsp;
                                <li><a href="/Dashboard/Index">Employee</a></li>

                            </ol>
                        </div><!--/breadcrums-->
                    </div>

                </div>
            </div>
        </div>

    </footer><!--/Footer-->

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)


</body>
</html>
