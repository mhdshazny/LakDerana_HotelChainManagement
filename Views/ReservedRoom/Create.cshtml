@model LakDerana_HotelChainManagement.ViewModels.ReservedRoomViewModel

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<h4>Reserve a Room</h4>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <form asp-action="upsert">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="ReservationID" class="control-label"></label>
                            @*<input asp-for="ReservationID" class="form-control" />*@
                            @Html.DropDownListFor(m => m.ReservationID, ViewData["RerservationList"] as SelectList, "-Select Reservation-", new { @class = "form-control" })
                            <span asp-validation-for="ReservationID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="RoomID" class="control-label"></label>
                            @*<input asp-for="RoomID" class="form-control" />*@
                            @Html.DropDownListFor(m => m.RoomID, ViewData["RoomList"] as SelectList, "-Select Hotel Room-", new { @class = "form-control" })
                            <span asp-validation-for="RoomID" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="DateRage" class="control-label"></label>
                            <input asp-for="DateRage" type="text" class="form-control" />
                            <span asp-validation-for="DateRage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">

                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="SpecialDescription" class="control-label"></label>
                            <textarea asp-for="SpecialDescription" class="form-control" ></textarea>
                            <span asp-validation-for="SpecialDescription" class="text-danger"></span>
                        </div>
                    </div>
                        <div class="form-group">
                            <label asp-for="CurrentRoomCharge" class="control-label" hidden></label>
                            <input asp-for="CurrentRoomCharge" class="form-control" hidden/>
                            <span asp-validation-for="CurrentRoomCharge" class="text-danger" hidden></span>
                        </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <input asp-for="Status" class="form-control" value="Reservation Approved" readonly/>

                            @*<select asp-for="Status" class="form-control">
                                <option value="Reservation Pending">Reservation Pending</option>
                                <option value="Reserved">Reserved</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>*@
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="TotalPayableAmount" class="control-label" hidden></label>
                            <input asp-for="TotalPayableAmount" class="form-control" hidden/>
                            <span asp-validation-for="TotalPayableAmount" class="text-danger" hidden></span>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <input type="reset" value="Cancel" class="btn btn-block btn-primary" />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-block btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


